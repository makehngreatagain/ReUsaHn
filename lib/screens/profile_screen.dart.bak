  State<ProfileScreen> createState() => _ProfileScreenState();
}

class _ProfileScreenState extends State<ProfileScreen> with SingleTickerProviderStateMixin {
  late UserModel currentUser;
  final PostService _postService = PostService();
  late TabController _tabController;
  Map<String, int> _postStats = {
    'total': 0,
    'approved': 0,
    'pending': 0,
    'rejected': 0,
  };

  @override
  void initState() {
    super.initState();
    currentUser = CurrentUserData.getCurrentUser();
    _tabController = TabController(length: 2, vsync: this);
    _loadPostStats();
  }

  @override
  void dispose() {
    _tabController.dispose();
    super.dispose();
  }

  Future<void> _loadPostStats() async {
    try {
      final authService = Provider.of<AuthService>(context, listen: false);
      final userId = authService.currentUser?.uid ?? '';
      if (userId.isNotEmpty) {
        final stats = await _postService.getUserPostStats(userId);
        setState(() {
          _postStats = stats;
        });
      }
    } catch (e) {
      // Error al cargar estadísticas - se omite silenciosamente
    }
  }

  void _refreshUser() {
    setState(() {
      currentUser = CurrentUserData.getCurrentUser();
    });
    _loadPostStats();
  }

  Future<void> _logout() async {
    final confirmed = await showDialog<bool>(
      context: context,
      builder: (context) => AlertDialog(
        title: const Text('Cerrar Sesión'),
        content: const Text('¿Estás seguro que deseas cerrar sesión?'),
        actions: [
          TextButton(
            onPressed: () => Navigator.pop(context, false),
            child: const Text('Cancelar'),
          ),
          TextButton(
            onPressed: () => Navigator.pop(context, true),
            style: TextButton.styleFrom(
              foregroundColor: Colors.red,
            ),
            child: const Text('Cerrar Sesión'),
          ),
        ],
      ),
    );

    if (confirmed == true && mounted) {
      try {
        final authService = Provider.of<AuthService>(context, listen: false);
        await authService.signOut();

        if (mounted) {
          // Navegar a la pantalla de login y limpiar todo el stack
          Navigator.of(context).pushAndRemoveUntil(
            MaterialPageRoute(builder: (_) => const LoginScreen()),
            (route) => false,
          );
        }
      } catch (e) {
        if (mounted) {
          ScaffoldMessenger.of(context).showSnackBar(
            SnackBar(
              content: Text('Error al cerrar sesión: ${e.toString()}'),
              backgroundColor: Colors.red,
            ),
          );
        }
      }
    }
  }

